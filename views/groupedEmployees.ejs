<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PTS - VeVa</title>
  <link rel="stylesheet" href="/index.css">
</head>
<body>
    <h1>Lijst</h1>
    <% employeesByDepartment.forEach(department => { %>
    <div class="department-container">
      <h2><%= department._id %></h2> 
      <div class="container">
        <% department.employees.forEach(employee => { %>
          <div class="employee-card">
            <h3><%= employee.name %></h3>
            <p><strong>Functie:</strong> <%= employee.position %></p>
            <p><strong>Rang:</strong> <%= employee.rang %></p>
            <p><strong>Roblox naam:</strong> <%= employee.roblox %></p>
          </div>
        <% }) %>
      </div>
    </div>
    <br><br>
  <% }) %>
 
  <footer>
    <a href="/add">Persoon toevoegen</a> 
  </footer>
</body>
</html>
